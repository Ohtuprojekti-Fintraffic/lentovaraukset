  "main": "index.js",
  "private": true,
  "scripts": {
    "start": "npm run start:backend & npm run start:frontend",
    "build": "npm -ws --if-present run build",
    "build:frontend": "npm -w @lentovaraukset/frontend run build",
    "test": "npm -ws --if-present run test",
